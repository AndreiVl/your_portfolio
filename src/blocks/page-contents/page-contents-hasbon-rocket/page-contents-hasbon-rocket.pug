      div.col-10.col-md-6
        img.img.view-img-small(src="images/img-hasbon-rocket-01-small.jpg" alt="Hashbon Rocket")
      div.col-10.col-md-6
        img.img.view-img-small(src="images/img-hasbon-rocket-02-small.jpg" alt="Hashbon Rocket")
      div.col-10.col-md-6
        img.img.view-img-small(src="images/img-hasbon-rocket-03-small.jpg" alt="Hashbon Rocket")

